{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier/react",
    "prettier/recommended"


  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"

  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "parser": "babylon",
      "trailingComma": "es5",
      "jsxSingleQuote": false,
      "printWidth": 120,
      "jsxBracketSameLine": true,
      "stylelintIntegration": true,
      "tabWidth": 2
      }],
    "jsx-quotes": [
      1,
      "prefer-double"
    ],
    "prefer-destructuring": ["error", {
      "VariableDeclarator": {
        "array": true,
        "object": true
      },
      "AssignmentExpression": {
        "array": false,
        "object": true
      }
    }, {
      "enforceForRenamedProperties": false
    }],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "semi": ["error", "always"]
  }
}
